{
	"name": "smali2java",
	"author": "ooooonly",
	"publisher": "ooooonly",
	"displayName": "Smali2Java",
	"description": "Decompile single smali file instantly",
	"version": "1.1.2",
	"license": "SEE LICENSE IN LICENSE",
	"icon": "res/icon.png",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:smali"
	],
	"keywords": [
		"smali",
		"smali2java",
		"decompile",
		"decompiler"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/only52607/smali2java.git"
	},
	"homepage": "https://github.com/only52607/smali2java/blob/main/README.md",
	"bugs": {
		"url": "https://github.com/only52607/smali2java/issues",
		"email": "ooooonly@foxmail.com"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "smali2java.decompileThisFile",
				"title": "反编译该文件",
				"shortTitle": "反编译",
				"category": "Smali",
				"enablement": "true",
				"icon": {
					"dark": "./res/dark/decompile.png",
					"light": "./res/light/decompile.png"
				}
			},
			{
				"command": "smali2java.clearCache",
				"title": "清除反编译缓存",
				"shortTitle": "清除缓存",
				"category": "Smali",
				"enablement": "true"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "smali2java.decompileThisFile",
					"when": "resourceExtname == .smali || editorLangId == smali",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "smali2java.decompileThisFile",
					"when": "resourceExtname == .smali || editorLangId == smali",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Smali2Java",
			"properties": {
				"smali2java.decompiler.jadx.path": {
					"type": "string",
					"default": null,
					"description": "Path to jadx (or jadx.bat for windows)."
				},
				"smali2java.decompiler.jadx.options": {
					"type": "string",
					"default": "",
					"description": "Options used to run jadx decompilation command (will be appended directly to the end of the command)."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/minimatch": "^5.1.2",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^11.7.5",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
